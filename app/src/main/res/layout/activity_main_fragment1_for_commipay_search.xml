<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/linearLayout_commitpay"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context=".CommitsPayments.MainActivity_CommitPay"
    android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/activitynain_for_Taskslinelayoutrela3nameAndLine"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal|center_vertical"
            android:background="#FFFFFF">
            <TextView
                android:id="@+id/TextView"
                android:layout_width="wrap_content"
                android:minHeight="25dp"
                android:layout_height="30dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="5dp"
                android:padding="2dp"
                android:gravity="center_vertical"
                android:text="Список согласований"
                android:textAlignment="textStart"
                android:textColor="#0E0E0E"
                android:textSize="14sp"
                android:textStyle="bold"
                android:visibility="visible"
                tools:ignore="MissingConstraints,RtlCompat" />
        </RelativeLayout>

    <RelativeLayout
        android:id="@+id/relativeLayout_recyreview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_horizontal|center_vertical"
        android:orientation="vertical"
        android:background="#FFFFFF">


        <SearchView
            android:id="@+id/searchview_commitpay"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_centerHorizontal="true"

            android:layout_marginStart="40dp"
            android:layout_marginEnd="40dp"

            android:padding="2dp"
            android:background="@drawable/style_for_newstypespinners_ietm7"
            android:checkMark="?android:attr/listChoiceIndicatorSingle"
            android:gravity="center_vertical|center_horizontal"
            android:paddingStart="?android:attr/listPreferredItemPaddingStart"
            android:paddingEnd="?android:attr/listPreferredItemPaddingEnd"
            android:queryHint="Поиск..."
            android:textAppearance="?android:attr/textAppearanceListItemSmall"
            android:textSize="15dp"
            android:textStyle="bold"
            android:visibility="invisible" />









        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycleviewcommitpay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/prograessbarcommitpaydown"
            android:layout_below="@+id/searchview_commitpay"
            android:layout_centerHorizontal="true"
            android:background="#FFFFFF"
            android:minHeight="550dp"
            android:visibility="visible"
            android:layout_margin="2dp"
            android:padding="2dp"
            tools:ignore="MissingConstraints" />




        <ProgressBar
            android:id="@+id/prograessbarcommitpaydown"
            style="@style/Widget.AppCompat.ProgressBar.Horizontal"
            android:layout_above="@+id/bottomnavigationActivicommit_search"
            android:layout_width="match_parent"
            android:indeterminateTint="#858888"
            android:layout_height="6dp"
            android:scaleY="3"
            android:scaleX="1"
            android:layout_centerHorizontal="true"
            android:indeterminate="true"
            android:visibility="visible" />



        <com.google.android.material.bottomnavigation.BottomNavigationView
            android:id="@+id/bottomnavigationActivicommit_search"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:scrollbarFadeDuration="@integer/config_navAnimTime"
            android:background="#FFD5D9DA"
            android:translationZ="5dp"
            app:itemIconTint="#0E0E0E"
            android:layout_marginTop="0dp"
            android:paddingTop="2dp"
            app:menu="@menu/manu_navigator_buttom_for_commitpay_search"
            app:popupTheme="@style/fortasknavigator"
            tools:ignore="MissingConstraints" />
    </RelativeLayout>
</LinearLayout>

